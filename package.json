{
    "$schema": "https://json.schemastore.org/package.json",
    "private": true,
    "type": "module",
    "scripts": {
        "build": "vite build",
        "dev": "vite",
        "package:build": "vite build --mode production",
        "package:dev": "vite build --mode development --watch",
        "keys:build": "php artisan keys:build",
        "keys:watch": "php artisan keys:build --watch",
        "keys:dev": "php artisan keys:build --dev --publish",
        "keys:publish": "php artisan keys:build --publish",
        "dev:all": "concurrently \"npm run dev\" \"npm run keys:watch\"",
        "build:all": "npm run build && npm run keys:build",
        "setup:keys": "cd packages/keys-ui && npm install"
    },
    "devDependencies": {
        "@tailwindcss/vite": "^4.0.0",
        "@types/node": "^20.0.0",
        "axios": "^1.11.0",
        "concurrently": "^9.0.1",
        "laravel-vite-plugin": "^2.0.0",
        "tailwindcss": "^4.0.0",
        "typescript": "^5.0.0",
        "vite": "^7.0.4"
    }
}
